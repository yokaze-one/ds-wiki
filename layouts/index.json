{{- $.Scratch.Add "index" slice -}}
{{- range .Site.AllPages -}}
  {{- if and (ne .Kind "taxonomy") (ne .Kind "term") (ne .Kind "404") (ne .Kind "page") -}}
    {{- else -}}
      {{- $.Scratch.Add "index" (dict "title" .Title "permalink" .Permalink "section" .Section "content" .Plain) -}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}